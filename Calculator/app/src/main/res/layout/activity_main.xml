<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:actionBarNavMode="standard"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="80dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:onClick="buttonClick"
            android:id="@+id/clear"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/button_css"
            android:text="AC"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/change"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_css"
            android:text="⌘"
            android:textStyle="bold"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/modular"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_css"
            android:text="%"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/div"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_operator"
            android:text="/"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/button_num"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_num"
            android:text="8"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_num"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/mul"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_operator"
            android:text="X"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/button_num"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_num"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_num"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/sub"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_operator"
            android:text="ㅡ"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/button_num"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_num"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_num"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/add"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_operator"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn0"
            android:layout_width="192dp"
            android:layout_height="90dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/button_num"
            android:paddingRight="100dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/dot"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_num"
            android:text="."
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/result"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/button_operator"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

    </LinearLayout>

</LinearLayout>