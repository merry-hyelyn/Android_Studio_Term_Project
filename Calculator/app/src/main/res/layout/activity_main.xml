<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="#FFFFFF"
            android:text="1"
            android:textSize="60dp"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_css"
            android:id="@+id/clear"
            android:text="AC"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_css"
            android:id="@+id/nothing"
            android:text="+/-"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_css"
            android:id="@+id/modular"
            android:text="%"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_operator"
            android:textColor="#FFFFFF"
            android:id="@+id/div"
            android:text="/"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_num"
            android:textColor="#FFFFFF"
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_num"
            android:textColor="#FFFFFF"
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_num"
            android:textColor="#FFFFFF"
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_operator"
            android:textColor="#FFFFFF"
            android:id="@+id/mul"
            android:text="x"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_num"
            android:textColor="#FFFFFF"
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_num"
            android:textColor="#FFFFFF"
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_num"
            android:textColor="#FFFFFF"
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_operator"
            android:textColor="#FFFFFF"
            android:id="@+id/sub"
            android:text="ã…¡"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_num"
            android:textColor="#FFFFFF"
            android:id="@+id/btn1"
            android:text="1"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_num"
            android:textColor="#FFFFFF"
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_num"
            android:textColor="#FFFFFF"
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_operator"
            android:textColor="#FFFFFF"
            android:id="@+id/plus"
            android:text="+"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="185dp"
            android:layout_height="85dp"
            android:background="@drawable/button_num"
            android:textColor="#FFFFFF"
            android:id="@+id/btn0"
            android:paddingRight="100dp"
            android:text="0"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_num"
            android:textColor="#FFFFFF"
            android:id="@+id/dot"
            android:text="."
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/button_operator"
            android:id="@+id/result"
            android:textColor="#FFFFFF"
            android:text="="
            android:textSize="30dp"
            android:layout_marginLeft="18dp"/>

    </LinearLayout>

</LinearLayout>